<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlayerlistActivity"
        android:background="#E8E6E1">

    <TextView
            android:text="@string/textViewPlayers"
            android:layout_width="200dp"
            android:layout_height="49dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center" android:textSize="30sp" android:id="@+id/textViewPlayers"
            android:background="@drawable/round_corner"/>
    <ListView
            android:layout_width="333dp"
            android:layout_height="385dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/players"
            android:textAlignment="center"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="16dp"
            android:verticalScrollbarPosition="defaultPosition"
            app:layout_constraintHorizontal_bias="0.444" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewPlayers" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@android:color/background_light"/>
</android.support.constraint.ConstraintLayout>