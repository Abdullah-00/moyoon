<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlayerlistActivity"
        android:background="@drawable/background_color">

    <TextView
            android:text="@string/textViewPlayers"
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="96dp" app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center" android:textSize="30sp" android:id="@+id/textViewPlayers"
            android:background="@drawable/round_corner"
            android:textColor="#000"
            android:fontFamily="@font/lato_black" app:layout_constraintHorizontal_bias="0.54"/>
    <ListView
            android:layout_width="262dp"
            android:layout_height="260dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/players"
            android:textAlignment="center"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="16dp"
            android:verticalScrollbarPosition="defaultPosition"
            app:layout_constraintHorizontal_bias="0.482" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewPlayers" android:layout_marginBottom="8dp"
            android:textColor="#00B2C3"
            android:fontFamily="@font/lato_black"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@android:color/background_light"
            app:layout_constraintVertical_bias="0.167"/>
</android.support.constraint.ConstraintLayout>