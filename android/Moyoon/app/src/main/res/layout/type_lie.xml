<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Type_Lie"
        android:background="#E8E6E1">

    <EditText
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/Lie"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#FFFFFF" android:hint="@string/Lie" android:textAlignment="center"
            android:layout_marginStart="2dp"
            app:layout_constraintHorizontal_bias="0.497"
            android:text="Submit" android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textStyle="bold"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="104dp"
            android:id="@+id/question_desplay"
            android:text="Question"
            android:textAlignment="center" android:textSize="24sp"
            android:layout_marginBottom="456dp"
            app:layout_constraintBottom_toTopOf="@+id/Lie"
            android:textColor="@android:color/black" tools:layout_editor_absoluteX="158dp"/>
    <TextView
            android:text="Timer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/timerTxt"
            android:textAlignment="center" android:textStyle="bold"
            android:textSize="18sp" android:textColor="@android:color/holo_red_light"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="180dp"
            android:layout_height="50dp" app:srcCompat="@drawable/Rectangle-submit"
            tools:layout_editor_absoluteY="514dp" tools:layout_editor_absoluteX="115dp" android:id="@+id/imageView"/>
</android.support.constraint.ConstraintLayout>