<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Type_Lie"
        android:background="#C9CACE">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/Lie"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#FFFFFF" android:hint="@string/Lie" android:textAlignment="center"
            android:layout_marginStart="2dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/roundText" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.482"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="104dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/question_desplay"
            android:text="Question"
            android:textAlignment="center" android:textSize="24sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/roundText" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/Lie"
            app:layout_constraintVertical_bias="0.012" android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.0"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="Round"
            android:layout_width="183dp"
            android:layout_height="51dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/roundText" android:textAlignment="center" android:textStyle="bold"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
            tools:textColor="@color/colorPrimary"/>
    <TextView
            android:text="Timer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/timerTxt" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/question_desplay" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/Lie" android:textAlignment="center" android:textStyle="bold"
            android:textSize="18sp" android:textColor="@android:color/holo_red_light"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>