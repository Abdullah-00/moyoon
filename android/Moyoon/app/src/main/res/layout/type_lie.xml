<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Type_Lie"
        android:background="@drawable/background_color">

    <TextView
            android:text="@string/questionRoundText7"
            android:layout_width="168dp"
            android:layout_height="33dp"
            android:id="@+id/questionRoundText7"
            android:textAlignment="center"
            android:fontFamily="@font/lato_black"
            android:textStyle="bold" android:textSize="18sp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:background="@drawable/round_corner_tl"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/roundText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/timerTxt" app:layout_constraintHorizontal_bias="0.228"/>
    <TextView
            android:text="@string/roundText"
            android:layout_width="168dp"
            android:layout_height="33dp"
            android:id="@+id/roundText"
            android:fontFamily="@font/lato_black"
            android:textAlignment="center" android:textStyle="bold" android:textSize="18sp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:background="@drawable/round_corner_tr"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/timerTxt"/>
    <TextView
            android:text="@string/timerTxt"
            android:layout_width="124dp"
            android:layout_height="20dp"
            android:id="@+id/timerTxt"
            android:textSize="18dp"
            android:fontFamily="@font/lato_black"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="322dp"
            android:layout_height="76dp"
            android:id="@+id/question_desplay"
            android:textAlignment="center"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:background="@drawable/round_corner_buttom"
            android:fontFamily="@font/lato_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/questionRoundText7"
            android:text="Question" app:autoSizeTextType="none"
            app:layout_constraintHorizontal_bias="0.47"/>
    <EditText
            android:layout_width="221dp"
            android:layout_height="56dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Lie"
            android:textAlignment="center" android:autoText="false"
            android:background="@color/cardview_light_background"
            android:hint="@string/Lie" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/question_desplay" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"/>
</android.support.constraint.ConstraintLayout>