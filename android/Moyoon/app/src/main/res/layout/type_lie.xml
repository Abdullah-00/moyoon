<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Type_Lie"
        android:background="#C9CACE">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/Lie"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#FFFFFF" android:hint="@string/Lie" android:textAlignment="center"
            android:layout_marginStart="2dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/roundText"/>
    <Button
            android:text="@string/Submit_lie"
            android:layout_width="221dp"
            android:layout_height="50dp"
            android:id="@+id/Submit_lie"
            android:background="#2493C8"
            android:textColor="#FFFF" android:textStyle="normal|bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/Lie"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="145dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/question_desplay"
            android:text="Question"
            android:textAlignment="center" android:textSize="24sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/roundText" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/Lie"
            app:layout_constraintVertical_bias="0.506" android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Round"
            android:layout_width="144dp"
            android:layout_height="33dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/roundText" android:textAlignment="center" android:textStyle="bold"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>