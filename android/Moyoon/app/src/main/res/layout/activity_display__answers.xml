<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Display_Answers"
        android:background="@drawable/background_color">

    <TextView
            android:text="Question"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:id="@+id/quiston_at_selecton" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp" android:textSize="24sp"
            android:textColor="@android:color/black"
            android:background="@drawable/round_corner_buttom" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/questionRoundText2"/>
    <ListView
            android:layout_width="380dp"
            android:layout_height="275dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:id="@+id/answers_list"
            android:textAlignment="center" android:textDirection="rtl"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/quiston_at_selecton"
            android:background="@drawable/round_corner"/>
    <TextView
            android:text="@string/roundText"
            android:layout_width="168dp"
            android:layout_height="33dp"
            android:id="@+id/roundText"
            android:textAlignment="center" android:textStyle="bold" android:textSize="18sp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/round_corner_tr"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/timerTxt"/>
    <TextView
            android:text="@string/questionRoundText2"
            android:layout_width="168dp"
            android:layout_height="33dp"
            android:id="@+id/questionRoundText2"
            android:textAlignment="center" android:textStyle="bold" android:textSize="18sp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/round_corner_tl" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/timerTxt" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/roundText" app:layout_constraintHorizontal_bias="0.0"
    />
    <TextView
            android:text="@string/timerTxt"
            android:layout_width="124dp"
            android:layout_height="20dp"
            android:id="@+id/timerTxt"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>