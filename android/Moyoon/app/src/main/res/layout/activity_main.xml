<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
android:background="#C9CACE">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Sission_Code"
            android:background="#FFFFFF" android:hint="@string/Session_Code" android:textAlignment="center"
            android:layout_marginTop="216dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="@string/join"
            android:layout_width="216dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/join" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Sission_Code" app:layout_constraintVertical_bias="0.068"
            android:background="#2493C8"
            android:textColor="#FFFF" android:textStyle="normal|bold" app:layout_constraintHorizontal_bias="0.505"/>
</android.support.constraint.ConstraintLayout>
