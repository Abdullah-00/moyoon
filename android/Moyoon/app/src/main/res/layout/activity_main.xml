<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#E8E6E1" tools:layout_editor_absoluteY="81dp">


    <Button
            android:text="JOIN Randomly"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/joinR"
            android:background="#2493C8"
            android:textColor="#FFFF" android:textStyle="normal|bold"
            android:layout_marginBottom="116dp" app:layout_constraintHorizontal_bias="0.497"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Sission_Code"
            android:background="#FFFFFF" android:hint="@string/Session_Code" android:textAlignment="center"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LieToWin"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nickname"
            android:background="#FFFFFF" android:hint="@string/nickname" android:textAlignment="center"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/Sission_Code"
    />
    <TextView
            android:text="Lie To Win!"
            android:layout_width="0dp"
            android:id="@+id/LieToWin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace" android:textAlignment="center" android:textSize="24sp"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp" android:textColor="@color/button_checked"
            tools:layout_editor_absoluteY="216dp" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageButton
            android:layout_width="180dp"
            android:layout_height="50dp" app:srcCompat="@drawable/Rectangle-submit"
            android:id="@+id/join" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/nickname" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:scaleType="fitXY"/>
    <ImageButton
            android:layout_height="50dp" app:srcCompat="@drawable/Rectangle-Login2"
            android:id="@+id/imageButton2"
            android:layout_width="180dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/join" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:scaleType="fitXY"/>
    <ImageView
            android:layout_width="240dp"
            android:layout_height="200dp" app:srcCompat="@drawable/MoyoonLogo"
            tools:layout_editor_absoluteY="4dp" tools:layout_editor_absoluteX="85dp" android:id="@+id/logo"/>
</android.support.constraint.ConstraintLayout>
