<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Sign_in_google"
        android:background="#E8E6E1">

    <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="283dp"
            android:layout_height="56dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <TextView
            android:layout_width="296dp"
            android:layout_height="173dp"
            android:id="@+id/UserName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.494"
            android:layout_marginTop="164dp"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_button" android:textAlignment="center"
            android:textSize="36sp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/GoPlay"/>
    <Button
            android:text="Sign out"
            android:layout_width="221dp"
            android:layout_height="41dp"
            android:id="@+id/Sign_out"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
            android:background="#008577"
            android:textColor="#ffffff"
    />
    <Button
            android:text="Start Play"
            android:layout_width="221dp"
            android:layout_height="41dp"
            android:id="@+id/GoPlay"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/Sign_out" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
            android:background="#008577"
            android:textColor="#ffffff"
    />
</android.support.constraint.ConstraintLayout>