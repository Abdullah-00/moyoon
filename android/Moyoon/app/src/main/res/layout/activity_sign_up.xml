<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Sign_up"
        android:background="#E8E6E1">
    <Button
            android:text="Twitter"
            android:layout_width="120dp"
            android:layout_height="67dp"
            android:id="@+id/twitter" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="100dp" app:layout_constraintBottom_toBottomOf="parent"
    />
    <ImageButton
            android:layout_width="180dp"
            android:layout_height="50dp" app:srcCompat="@drawable/Facebook-Login"
            android:id="@+id/FB"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button"/>
    <ImageButton
            android:layout_width="180dp"
            android:layout_height="50dp" app:srcCompat="@drawable/Guest-Login"
            tools:layout_editor_absoluteX="115dp" android:id="@+id/button" android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:layout_width="180dp"
            android:layout_height="50dp" app:srcCompat="@drawable/Google-Login"
            android:id="@+id/google" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/twitter"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>